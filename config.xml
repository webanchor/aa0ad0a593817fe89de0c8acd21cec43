<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id        = "solutions.onlineapps.pkessay"
		versionCode="1"
		version   = "1.0.0">
		<name>PKEssay</name>
		<description>PKEssay</description>
		<author href="http://onlineapps.solutions" email="abdullah@webanchor.net">Web Anchor</author>
		
		<preference name="phonegap-version" value="cli-6.5.0" />		
		<preference name="orientation" value="default" />
		<preference name="fullscreen" value="false" />
		<preference name="target-device" value="universal" />
		<preference name="webviewbounce" value="true" />
		<preference name="prerendered-icon" value="true" />
		<preference name="stay-in-webview" value="true" />
		<preference name="ios-statusbarstyle" value="default" />
		<preference name="StatusBarOverlaysWebView" value="false" />
		<preference name="detect-data-types" value="true" />
		<preference name="exit-on-suspend" value="false" />
		<preference name="ShowSplashScreenSpinner" value="false" />
		<preference name="AutoHideSplashScreen" value="true" />
		<preference name="SplashScreenDelay" value="3000" />
		<preference name="SplashShowOnlyFirstTime" value="true" />
		<preference name="EnableViewportScale" value="true" />
		<preference name="MediaPlaybackRequiresUserAction" value="false" />
		<preference name="AllowInlineMediaPlayback" value="false" />
		<preference name="BackupWebStorage" value="local" />
		<preference name="TopActivityIndicator" value="gray" />
		<preference name="KeyboardDisplayRequiresUserAction" value="false" />
		<preference name="HideKeyboardFormAccessoryBar" value="false" />
		<preference name="SuppressesIncrementalRendering" value="false" />
		<preference name="android-installLocation" value="internalOnly" />
		<preference name="iosPersistentFileLocation" value="Compatibility" />
		<preference name="ErrorUrl" value=""/>
		<preference name="BackgroundColor" value="0x000000"/>
		<preference name="KeepRunning" value="true"/>
		<preference name="DisallowOverscroll" value="true"/>
		<preference name="LoadingDialog" value=","/> 
		<preference name="LoadUrlTimeoutValue" value="20000" />
		<preference name="disable-cursor" value="false" />
		
		<plugin name="cordova-plugin-whitelist" />
		<plugin name="cordova-plugin-device" />
		<plugin name="cordova-plugin-globalization" />		
		<plugin name="cordova-plugin-network-information" />
		<plugin name="cordova-plugin-dialogs" />
		<plugin name="cordova-plugin-datepicker" />
		<!--<plugin name="cordova-plugin-camera" />-->
		<plugin name="cordova-plugin-vibration" />
		<plugin name="cordova-plugin-statusbar" />
		<plugin name="cordova-plugin-splashscreen" />
		<plugin name="cordova-plugin-file" />
		<plugin name="cordova-plugin-file-transfer" />
		<plugin name="cordova-plugin-inappbrowser" />
		<!--<plugin name="https://github.com/jcesarmobile/FilePicker-Phonegap-iOS-Plugin.git" />-->

		<access origin="*"/>
		<allow-intent href="http://*/*"/>
		<allow-intent href="https://*/*"/>
		<allow-intent href="tel:*"/>
		<allow-intent href="sms:*"/>
		<allow-intent href="mailto:*"/>
		<allow-intent href="geo:*"/>
		
		<!--<platform name="android">
			<allow-intent href="market:*"/>
		</platform>-->
		
		<platform name="ios">
			<allow-intent href="itms:*" />
			<allow-intent href="itms-apps:*" />
			<icon src="res/icons/icon-60@3x.png" width="180" height="180" />
			<icon src="res/icons/icon-83.5@2x.png" width="167" height="167" />
			<icon src="res/icons/icon-76@2x.png" width="152" height="152" />
			<icon src="res/icons/icon-60@2x.png" width="120" height="120" />
			<icon src="res/icons/icon-40@3x.png" width="120" height="120" />
			<icon src="res/icons/icon-small@3x.png" width="87" height="87" />
			<icon src="res/icons/icon-40@2x.png" width="80" height="80" />
			<icon src="res/icons/icon-76.png" width="76" height="76" />
			<icon src="res/icons/icon-60.png" width="60" height="60" />
			<icon src="res/icons/icon-small@2x.png" width="58" height="58" />
			<icon src="res/icons/icon-40.png" width="40" height="40" />
			<icon src="res/icons/icon-small.png" width="29" height="29" />
			
			<splash src="res/screens/ios-screen1.png" width="320" height="480" />
			<splash src="res/screens/ios-screen2.png" width="640" height="960" />
			<splash src="res/screens/ios-screen3.png" width="640" height="1136" />
			<splash src="res/screens/ios-screen4.png" width="750" height="1334" />
			<splash src="res/screens/ios-screen5.png" width="1242" height="2208" />
			<splash src="res/screens/ios-screen6.png" width="2208" height="1242" />
			<splash src="res/screens/ios-screen7.png" width="768" height="1024" />
			<splash src="res/screens/ios-screen8.png" width="1024" height="768" />
			<splash src="res/screens/ios-screen9.png" width="1536" height="2048" />
			<splash src="res/screens/ios-screen10.png" width="2048" height="1536" />
		</platform>
		
		<icon src="icon.png"/>
		<splash src="screen.png"/>
		
		<config-file platform="ios" parent="NSCameraUsageDescription" mode="replace">
			<string>This app needs access to Camera.</string>
		</config-file>
		<config-file platform="ios" parent="NSPhotoLibraryUsageDescription" mode="replace">
			<string>This app needs access to Photos.</string>
		</config-file>
		
		
